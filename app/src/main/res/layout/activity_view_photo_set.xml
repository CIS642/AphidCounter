<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cis642.aphidcounter.ViewPhotoSet">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/bugTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bug Type: "
            android:textSize="20dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/fieldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field: "
            android:textSize="20dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/cropType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Type: "
            android:textSize="20dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dateTakenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Taken: "
            android:textSize="20dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/numberOfPhotosText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Photos: "
            android:textSize="20dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/avgBugCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Bug Count: "
            android:textSize="20dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/originalPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="View Original Photos"
            android:textSize="24dp"
            android:padding="20dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/convertedPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="View Converted Photos"
            android:textSize="24dp"
            android:padding="20dp"
            android:layout_marginTop="8dp"/>

        <!--
        <Button
            android:id="@+id/convertPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CONVERT PHOTOS"
            android:textSize="24dp"
            android:padding="20dp"
            android:layout_marginTop="8dp"/>
        -->

    </LinearLayout>

</ScrollView>

</RelativeLayout>